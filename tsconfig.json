{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@server/world/*": ["src/server/world/*"],
      "@server/agents/*": ["src/server/agents/*"],
      "@clients/cli/*": ["src/clients/cli/*"],
      "@clients/app/*": ["src/clients/app/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/clients/app/**/*"]
}
